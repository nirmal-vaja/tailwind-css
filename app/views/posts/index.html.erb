<div class="container mt-5">
  <h1 class="mt-2 text-center"> Posts Listing </h1>
  <table class="table table-bordered table-dark table-striped table-hover text-center">
    <thead>
      <th scope="col">#</th>
      <th scope="col">Title</th>
      <th scope="col">Description</th>
      <th scope="col">Actions</th>
    </thead>
    <tbody>
      <tr>
        <% if @posts.present? %>
          <% @posts.each_with_index do |post, index| %>
            <td><%= index + 1 %></td>
            <td><%= post.title %></td>
            <td><%= post.description %></td>
            <td>
              <%= link_to "Edit", edit_post_path(post), class: "btn btn-info" %>
              <%= link_to "Delete", post_path(post), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-danger" %>
            </td>
          <% end %>
        <% else %>
          <td colspan="4"> Create some posts to display </td>
        <% end %>
      </tr>
    </tbody>
  </table>
</div>