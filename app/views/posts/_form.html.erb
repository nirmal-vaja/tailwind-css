<div class="row">
  <div class="col-3"></div>
  <div class="col-6">
    <%= form_with(model: @post) do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, class: "form-control" %>
      </div>
      <div class="form-group text-center mt-5">
        <%= f.submit class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>